  <thead>
    <tr>
      <th>CEP</th>
      <th>Rua</th>
      <th>Número</th>
      <th>Cidade</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= @address.cep %></td>
        <td><%= @address.street %></td>
        <td><%= @address.number %></td>
        <td><%= @address.city %></td>
        <td><%= @address.state %></td>
      </tr>
  </tbody>
</table>
