
<%= simple_form_for contact do |f| %>
  
  <div class="form-inputs">
    <%= f.input :full_name, error: 'Title is mandatory, please specify one'  %>
    <%= f.input :email, error: 'Title is mandatory, please specify one' %>
  </div>
 
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>